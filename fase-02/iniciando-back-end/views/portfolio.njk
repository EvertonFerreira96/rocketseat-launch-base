{% extends "layout.njk" %}

{% block head %}
  <title>Trabalhos Realizados</title> 
  <link rel="stylesheet" type="text/css" href="/portfolio.css" >
{% endblock %}

{% block content %}

    <div id='wrapper'>
      <h1>Aulas</h1>
    </div>

    <section class='cards video'>

      {% for item in items %}

        <div class='card' id='{{item.id}}'>
          <div class='card-image-container {{ "featured-wrapper" if item.featured }}'>
            <img src='https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg' 
                 alt='Imagem de {{item.title}}'/>
            {% if item.featured %}
              <div class="featured"> Destaque! </div>
            {% endif %}
          </div>
          <div class='card-content'>
            <p>{{item.title}}</p>
          </div>
          <div class='card-info'>
            <p>57 mim</p>
            <p class='card-price'>{{item.price}}</p>
          </div>
        </div>  
      {% endfor %}

    </section>

    <div class='modal-overlay'>
      <div class='modal maximize'>
        <a class='close-modal'>
          <i class='material-icons'>close</i>
        </a>
        <div class='modal-content'>
          <i class='material-icons loading'>loop</i>
          <iframe frameborder='0' 
          
          
          allow="accelerometer; 
                 autoplay; 
                 clipboard-write; 
                 encrypted-media; 
                 gyroscope; 
                 picture-in-picture" 
          allowfullscreen

          
          ></iframe>
        </div>
      </div>
    </div>

    <script src='portfolio.js'></script>

    {% endblock %}