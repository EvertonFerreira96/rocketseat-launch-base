
{% extends "layout.njk" %}

{% block head %}
  <title>{{item.title}}</title> 
  <link rel="stylesheet" type="text/css" href="/video.css" >
{% endblock %}

{% block content %}

    <div id='wrapper'>
      <h1>{{item.title}}</h1>
    </div> 

    <section class='video'>

        <div class='card' id='{{item.id}}'>
          <div class='card-video-container {{ "featured-wrapper" if item.featured }}'>
            <iframe frameborder='0' 
                    src='https://www.youtube.com/embed/{{item.id}}'
                    allow="accelerometer; 
                          autoplay; 
                          clipboard-write; 
                          encrypted-media; 
                          gyroscope; 
                          picture-in-picture" 
                    allowfullscreen        
                    ></iframe>
          </div>
          <div class='card-content'>
            <p>{{item.title}}</p>
          </div>
          <div class='card-info'>
            <p>57 mim</p>
            <p class='card-price'>{{item.price}}</p>
          </div>
        </div>  

    </section>

{% endblock %}